QPushButton {
    background: transparent;
    color: white;
    border-radius: 5px;
    font-family: Roboto; 
    font-size: 15px;
    font-weight: regular;
}

QPushButton#TOOLBAR_BUTTON {
    width: 50px;
    height: 50px;
    min-width: 50px;
    max-width: 50px;
}

QPushButton#ACTION_BUTTON {
    background: #2c698d;
    width: 135px;
    height: 40px;
    margin: 5px;
}

QPushButton#LIST_ACTION_BUTTON {
    background: #2c698d;
    width: 120px;
    height: 30px;
    font-size: 25px;
    font-weight: bold;
}

QPushButton:hover {
    border: 2px solid;
    border-color: #e3f6f5;
}


QPushButton#ACTION_BUTTON:pressed,  
QPushButton#TOOLBAR_BUTTON:pressed,
QPushButton#LIST_ACTION_BUTTON:pressed {
    border-style: inset;
    background: #bae8e8;
}