QScrollArea {
    background: transparent;
    border: 0px;
    margin: 0px;
    padding: 0px;
    min-width: 120px;
}

QScrollArea#TOOLBAR_SCROLL_AREA{
    min-height: 60px;
}

QScrollArea#CONTENT_SCROLL_AREA{
    min-height: 200px;
}

QScrollBar{
    background: transparent;
    height: 7px;
}

QScrollBar::handle{
    background: #303030;
    border-radius: 3px;
}

QScrollBar::handle::pressed{
    background: black;
}